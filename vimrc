execute pathogen#infect()
syntax on
filetype plugin indent on

" Enable NerdTree
map <C-n> :NERDTreeToggle<CR>

colorscheme jellybeans

"if has('gui_running')	
"	set background=light
"else
"	set background=dark
"endif

" UTF-8 encoding
set encoding=utf-8
" No backup
set noswapfile
" Number of the line
set number
" Font and size
set gfn=Monaco:h14

